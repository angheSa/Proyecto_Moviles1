<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.OptionalActivity"
        android:elevation="20dp">

    <TextView
            android:text="@string/recover_pasword_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTitle"
            android:layout_marginEnd="178dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="178dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="34sp"
            android:textColor="@color/darkgreen"
            android:foregroundTint="#000000"
            android:foregroundTintMode="screen"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            android:layout_marginTop="16dp" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="196dp"
            android:layout_height="200dp"
            android:layout_marginStart="116dp"
            android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/atipaxgroup"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle"
            app:layout_constraintBottom_toTopOf="@+id/lblId" />

    <Button
            android:text="@string/btn_recuperar"
            android:layout_width="139dp"
            android:layout_height="58dp"
            android:id="@+id/btn_recuperar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp"
            android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintTop_toBottomOf="@+id/txtId"
            android:textSize="16sp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_recuperar"
            app:layout_constraintTop_toBottomOf="@+id/lblId"
            app:layout_constraintHorizontal_bias="0.49" />

    <TextView
            android:text="Usuario:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblId"
            app:layout_constraintBottom_toTopOf="@+id/txtId"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:layout_marginEnd="176dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
            android:layout_width="42dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/baseline_home_24"
            android:id="@+id/imgHome"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="79dp"
            app:layout_constraintStart_toEndOf="@+id/btn_recuperar"
            android:layout_marginTop="613dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>