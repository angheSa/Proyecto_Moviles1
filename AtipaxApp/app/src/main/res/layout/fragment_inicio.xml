<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageButton
            android:id="@+id/imgBtnTour"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:contentDescription="botonHotel"
            app:srcCompat="@mipmap/tour"
            app:layout_constraintStart_toEndOf="@+id/imgBtnHotel"
            android:layout_marginStart="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnFullDay"
            android:layout_marginTop="48dp" />

    <ImageButton
            android:id="@+id/imgBtnProveedores"
            android:layout_width="110dp"
            android:layout_height="84dp"
            android:layout_marginStart="148dp"
            android:contentDescription="botonProveedores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnTour"
            app:srcCompat="@mipmap/proveedores"
            android:layout_marginTop="60dp" />

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="140dp"
            android:text="Bienvenido a Atipax"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/imgBtnPaquete"
            android:layout_width="118dp"
            android:layout_height="94dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:contentDescription="botonPaquete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@mipmap/paquete" />

    <ImageButton
            android:id="@+id/imgBtnFullDay"
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:contentDescription="botonFullDay"
            app:layout_constraintStart_toEndOf="@+id/imgBtnPaquete"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@mipmap/full" />

    <ImageButton
            android:id="@+id/imgBtnHotel"
            android:layout_width="114dp"
            android:layout_height="86dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:contentDescription="botonHotel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBtnPaquete"
            app:srcCompat="@mipmap/hotel" />


</androidx.constraintlayout.widget.ConstraintLayout>