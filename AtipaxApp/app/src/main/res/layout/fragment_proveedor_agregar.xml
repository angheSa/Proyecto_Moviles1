<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.views.proveedor.ProveedorAgregarFragment"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCodigo"
            app:layout_constraintVertical_bias="0.119"
            tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_nombreP" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtDireccion"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre"
            app:layout_constraintVertical_bias="0.119"
            tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDireccionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_direccionP" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtCorreo"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDireccion"
            app:layout_constraintVertical_bias="0.119"
            tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCorreoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_correoP" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo"
            app:layout_constraintVertical_bias="0.119"
            tools:layout_editor_absoluteX="0dp"
            android:inputType="number">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTelefonoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_telefonoP" />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btn_add"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"

            android:text="@string/btn_agregar_proveedor"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:text="@string/btn_actualizar_p"
            app:layout_constraintStart_toStartOf="parent"
 />
        <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="154dp"
                android:text="@string/btn_eliminar_p"
                app:layout_constraintStart_toStartOf="parent"

               />
    <Button
            android:id="@+id/btn_vovler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:text="@string/btnVolver"
            app:layout_constraintStart_toStartOf="parent"

            />



</LinearLayout>