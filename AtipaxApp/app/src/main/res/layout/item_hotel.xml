<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="5dp"


android:layout_marginBottom="9dp"
android:layout_marginEnd="16dp"
android:layout_marginStart="16dp"
app:cardElevation="1dp"
app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">


        <TextView
                android:text="@string/destinoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_destinoH"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/varela_round" />

        <TextView
                android:text="@string/nombreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_nombreH"
                app:layout_constraintTop_toBottomOf="@+id/lbl_destinoH"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/varela_round" />
        <TextView
                android:text="@string/descripcionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_descripcionH"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nombreH"
                android:fontFamily="@font/varela_round" />

        <TextView
                android:text="@string/precioLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_precioH"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_descripcionH"
                android:fontFamily="@font/varela_round" />


        <TextView
                android:text="@string/proveedorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_proveedorH"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_precioH"
                android:fontFamily="@font/varela_round"

                android:layout_marginBottom="4dp" />

    </LinearLayout>


<LinearLayout
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="124dp">


    <TextView
            android:id="@+id/lbl_destinoHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/destinoHotel"
            android:fontFamily="@font/varela_round"

            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/lbl_nombreHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/destinoHotel"
            android:fontFamily="@font/varela_round"
            app:layout_constraintTop_toBottomOf="@+id/lbl_destinoHotel"
            android:layout_marginStart="38dp"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
            android:id="@+id/lbl_descripcionHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/descripcionHotel"
            app:layout_constraintTop_toBottomOf="@+id/lbl_nombreHotel"
            android:fontFamily="@font/varela_round"
            android:layout_marginStart="38dp"/>

    <TextView
            android:id="@+id/lbl_precioHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/precioHotel"
            app:layout_constraintTop_toBottomOf="@+id/lbl_descripcionHotel"
            android:fontFamily="@font/varela_round"
            android:layout_marginStart="38dp"  />

    <TextView
            android:id="@+id/lbl_proveedorHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/proveedorHotel"
            app:layout_constraintTop_toBottomOf="@+id/lbl_precioHotel"
            android:fontFamily="@font/varela_round"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="4dp"/>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>