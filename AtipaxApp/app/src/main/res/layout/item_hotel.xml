<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:id="@+id/lbl_codigoHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/codigoHotel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.045"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_codigoH"
                android:layout_marginStart="10dp" />

        <TextView
                android:id="@+id/lbl_destinoHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/destinoHotel"
                app:layout_constraintTop_toBottomOf="@+id/lbl_codigoHotel"
                app:layout_constraintStart_toEndOf="@+id/lbl_destinoH"
                android:layout_marginStart="13dp" />

        <TextView
                android:id="@+id/lbl_descripcionHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/descripcionHotel"
                app:layout_constraintTop_toBottomOf="@+id/lbl_destinoHotel"
                app:layout_constraintStart_toEndOf="@+id/lbl_descripcionH"
                android:layout_marginStart="38dp" />

        <TextView
                android:id="@+id/lbl_precioHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/precioHotel"
                app:layout_constraintTop_toBottomOf="@+id/lbl_descripcionHotel"
                app:layout_constraintStart_toEndOf="@+id/lbl_precioH"
                android:layout_marginStart="38dp" />

        <TextView
                android:id="@+id/lbl_proveedorHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/proveedorHotel"
                app:layout_constraintTop_toBottomOf="@+id/lbl_precioHotel"
                app:layout_constraintStart_toEndOf="@+id/lbl_proveedorH"
                android:layout_marginStart="38dp" />


        <TextView
                android:id="@+id/lbl_codigoH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/codigoLabel"

                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" />

        <TextView
                android:text="@string/destinoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_destinoH"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_codigoH" />

        <TextView
                android:text="@string/descripcionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_descripcionH"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_destinoH" />

        <TextView
                android:text="@string/precioLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_precioH"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_descripcionH" />


        <TextView
                android:text="@string/proveedorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_proveedorH"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_precioH" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>