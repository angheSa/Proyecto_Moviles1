<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

    <LinearLayout
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp">

        <TextView
                android:text="@string/nombreLabelP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_nombreP"

                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:text="@string/direccionLabelP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_direccionP"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nombreP" />

        <TextView
                android:text="@string/correoLabelP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_correoP"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_direccionP" />

        <TextView
                android:text="@string/telefonoLabelP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_telefonoP"
                tools:layout_editor_absoluteY="80dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@+id/lbl_correoP" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginLeft="124dp">

        <TextView
                android:id="@+id/lbl_nombreProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/nombreProveedor"


                android:layout_marginStart="38dp"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/lbl_direccionProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/direccionProveedor"
                app:layout_constraintTop_toBottomOf="@+id/lbl_nombreProveedor"

                android:layout_marginStart="38dp" />

        <TextView
                android:id="@+id/lbl_correoProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/correoProveedor"
                app:layout_constraintTop_toBottomOf="@+id/lbl_direccionProveedor"

                android:layout_marginStart="38dp" />

        <TextView
                android:id="@+id/lbl_telefonoProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/telefonoProveedor"
                app:layout_constraintTop_toBottomOf="@+id/lbl_correoProveedor"

                android:layout_marginStart="38dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>